@model ClsLogin

@{
    ViewData["Title"] = "Login";

}

<div class="container-fluid pt-4">
    @using (Html.BeginForm("PostLogin", "Account", null, FormMethod.Post, true, new { @id = "FrmLogin" }))
    {
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input asp-for="@Model.Correo" class="form-control" id="exampleInputEmail1" placeholder="Ingrese su correo">
            <span asp-validation-for="@Model.Correo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input asp-for="@Model.Password" class="form-control" id="exampleInputPassword1" placeholder="Ingrese su contraseña">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <br />
        <div class="w-100 text-center">
            <span class="text-danger">@ViewBag.Error</span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>

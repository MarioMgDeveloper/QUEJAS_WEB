
@{
    ViewData["Title"] = "BuscarQueja";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <input type="text" class="form-control" placeholder="Ingrese su número de queja aqui" id="TxtId" />
        </div>
    </div>
    <br />
    <div class="row d-flex justify-content-center">
        <button class="btn btn-primary" onclick="DetalleQueja('#TxtId','#DetalleContent')">Buscar</button>
    </div>
    <br />
    <div class="row text-center" id="DetalleContent">
    </div>
</div>